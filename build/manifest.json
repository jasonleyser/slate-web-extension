{
  "manifest_version": 3,
  "name": "Slate Web Extension",
  "description": "Easily save any link to your Slate account.",
  "version": "3",
  "homepage_url": "https://slate.host",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png",
    "default_title": "Slate Web Extension"
  },
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": false,
    "js": [
      "./jquery.js",
      "./content.js"
    ],
    "run_at": "document_idle"
  }],
  "permissions": [
    "tabs",
    "contextMenus",
    "cookies",
    "commands"
  ],
  "host_permissions": ["https://slate.host/"],
  "commands": {
    "open-app": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Open the slate extension"
    },
    "open-slate": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "Alt+O"
      },
      "description": "Open the slate web app"
    },
    "direct-save": {
      "suggested_key": {
        "default": "Alt+B",
        "mac": "Alt+B"
      },
      "description": "Direct save"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [ 
        "index.html",
        "/static/*",
        "/fonts/*",
        "Inter-Regular.ttf",
        "../fonts/*" 
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
